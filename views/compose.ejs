<%- include("./partials/header") -%>

<h1>Compose</h1>

<form action="/compose" method="post">

    <div class="form-group">
      <label for="text">Title</label>
      <input class="form-control" type="text" name="blogTitle" value="">
    </div>
    <div class="form-group">
      <label for="textarea">Post</label>
      <textarea class="form-control" name="blogPost" rows="6"></textarea>
    </div>
    <button class="btn btn-lg btn-primary" type="submit" name="button">Publish</button>

</form>


